<mvc:View xmlns = "sap.m" 
  xmlns:mvc = "sap.ui.core.mvc"
  xmlns:core = "sap.ui.core"
  xmlns:l = "sap.ui.layout"
  xmlns:f = "sap.ui.layout.form"
  controllerName = "carrpasp.controller.CPaspView"
  xmlns:semantic="sap.m.semantic">
	<semantic:FullscreenPage id="page" 
	    semanticRuleSet="Optimized" 
	    title="{i18n>cpaspViewTitle}" 
		navButtonPress="onNavBack"
		showNavButton="true">
		<semantic:content>
			<IconTabBar id="idTopLevelIconTabBar" class = "sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter id="general" text="{i18n>cpaspGeneral}">
						<OverflowToolbar class="sapUiMediumMarginTop">
							<ToolbarSpacer/>
							<Button id="cpaspUpdButton" icon="sap-icon://edit" press="onUpd" tooltip="Изменить паспорт"/>
							<Button id="cpaspDelButton" icon="sap-icon://delete" press="onDel" tooltip="Удалить паспорт"/>
						</OverflowToolbar>
						<ObjectHeader
							id="cpaspHeader"
							title="{NUM}">				
							<attributes>
								<ObjectAttribute title="{i18n>cpaspCreatedt}" text="{path:'CREATEDT', type:'sap.ui.model.type.Date'}" />
							</attributes>
							<attributes>
								<ObjectAttribute title="{i18n>cpaspRegdt}" text="{path:'REGDT', type:'sap.ui.model.type.Date'}" />
							</attributes>
							<attributes>
								<ObjectAttribute title="{i18n>cpaspPrimeprice}" text="{PRIMPRICE}" />
							</attributes>
							<attributes>
								<ObjectAttribute title="{i18n>cpaspFactoryn}" text="{FACTORYN}" />
							</attributes>
						</ObjectHeader>
						<ObjectHeader
							id="cpaspSegValHeader"
							title="Сегменты">				
						</ObjectHeader>
					</IconTabFilter>
					<IconTabFilter id="repair" text="{i18n>cpaspRepair}">
						<mvc:XMLView viewName="carrpasp.view.RepairTbl"/>
					</IconTabFilter>
					<IconTabFilter id="run" text="{i18n>cpaspRun}">
						<mvc:XMLView viewName="carrpasp.view.CrunTbl"/>
					</IconTabFilter>
					<IconTabFilter id="jur" text="{i18n>cpaspJur}">
						<mvc:XMLView viewName="carrpasp.view.CjurTbl"/>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</semantic:content>
	</semantic:FullscreenPage>
</mvc:View>