<mvc:View
	controllerName="carrpasp.controller.CPaspEdit"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns="sap.m"
	xmlns:l = "sap.ui.layout"
	xmlns:smartfield="sap.ui.comp.smartfield"
	xmlns:smartform="sap.ui.comp.smartform">
	<semantic:FullscreenPage
		id="page"
		title="{i18n>cpaspEditTitle}"
		showNavButton="true"
		navButtonPress="onNavBack">
		<semantic:content>
			<smartform:SmartForm
				id="form"
				editable="true"
				title="{i18n>cpaspDataTitle}"
				class="sapUiResponsiveMargin"
				entityType="/CPASPType">
				<smartform:Group
					id="formGroup"
					label="{i18n>cpaspGeneral}">
					<smartform:layout>
						<l:GridData span="L6 M6 S12"/>
					</smartform:layout>	
					<smartform:GroupElement>
						<smartfield:SmartField
							id="numField"
							value="{NUM}"
							editable="false"
							textLabel="{i18n>cpaspNum}"/>
					</smartform:GroupElement>
					<smartform:GroupElement>
						<smartfield:SmartField
							id="nameCreateDt"
							value="{CREATEDT}"
							textLabel="{i18n>cpaspCreatedt}"/>
					</smartform:GroupElement>
					<smartform:GroupElement>
						<smartfield:SmartField
							id="numRegDt"
							value="{REGDT}"
							textLabel="{i18n>cpaspRegdt}"/>
					</smartform:GroupElement>
					<smartform:GroupElement>
						<smartfield:SmartField
							id="numPrimPrice"
							value="{PRIMPRICE}"
							textLabel="{i18n>cpaspPrimeprice}"/>
					</smartform:GroupElement>
					<smartform:GroupElement>
						<smartfield:SmartField
							id="numFactoryn"
							value="{FACTORYN}"
							textLabel="{i18n>cpaspFactoryn}"/>
					</smartform:GroupElement>
					<smartform:GroupElement>
						<smartfield:SmartField
							id="numDeviceid"
							value="{DEVICEID}"
							textLabel="{i18n>cpaspDeviceId}"/>
					</smartform:GroupElement>
				</smartform:Group>
				<smartform:Group
					id="editsegGroup"
					label="{i18n>cpaspSegVals}">
					<smartform:layout>
						<l:GridData span="L6 M6 S12" linebreakS="true"/>
					</smartform:layout>	
					<smartform:GroupElement id="editsegGroupElement">
					</smartform:GroupElement>
				</smartform:Group>
			</smartform:SmartForm>
		</semantic:content>	
		<semantic:saveAction>
			<semantic:SaveAction id="save" press="onSave"/>
		</semantic:saveAction>
		<semantic:cancelAction>
			<semantic:CancelAction id="cancel" press="onCancel"/>
		</semantic:cancelAction>		
	</semantic:FullscreenPage>
</mvc:View>